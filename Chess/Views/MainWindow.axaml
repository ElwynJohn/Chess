<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:Chess.Views"
        x:Class="Chess.Views.MainWindow"
        Icon="/Assets/piece_black_castle.png"
        Width="1500" Height="860"
        MinWidth="980" MinHeight="400"
        Title="Chess"
        Background="#312e2b"
        WindowStartupLocation="CenterScreen">

    <Grid ColumnDefinitions="Auto,*">

        <ContentControl Grid.Column="0" Content="{Binding Menu}"/>

        <ContentControl Grid.Column="1" Content="{Binding ChildViews}"/>

    </Grid>

</Window>
